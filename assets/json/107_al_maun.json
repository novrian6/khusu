{
  "number": 107,
  "name": "Al-Ma'un",
  "verses": 7,
  "no_juzz": 30,
  "ayahs": [
    {
      "no_ayah": 1,
      "arabic": "أَرَأَيْتَ الَّذِي يُكَذِّبُ بِالدِّينِ",
      "transliteration": "Ara-aita alladzi yukadzibu biddin",
      "indonesian": "Tahukah kamu (orang) yang mendustakan agama?",
      "english": "Have you seen the one who denies the Recompense?"
    },
    {
      "no_ayah": 2,
      "arabic": "فَذَلِكَ الَّذِي يَدُعُّ الْيَتِيمَ",
      "transliteration": "Fadzalika alladzi yadu'ul yatim",
      "indonesian": "Maka itulah orang yang menghardik anak yatim,",
      "english": "For that is the one who drives away the orphan."
    },
    {
      "no_ayah": 3,
      "arabic": "وَلَا يَحُضُّ عَلَىٰ طَعَامِ الْمِسْكِينِ",
      "transliteration": "Wala yahuddu 'ala tha'amil miskin",
      "indonesian": "dan tidak mendorong memberi makan orang miskin.",
      "english": "And does not encourage the feeding of the poor."
    },
    {
      "no_ayah": 4,
      "arabic": "فَوَيْلٌ لِّلْمُصَلِّينَ",
      "transliteration": "Fawailul lil mushallin",
      "indonesian": "Maka celakalah orang yang salat,",
      "english": "So woe to those who pray,"
    },
    {
      "no_ayah": 5,
      "arabic": "الَّذِينَ هُمْ عَن صَلَاتِهِمْ سَاهُونَ",
      "transliteration": "Alladzina hum 'an shalatihim sahun",
      "indonesian": "(yaitu) orang-orang yang lalai terhadap salatnya,",
      "english": "[But] who are heedless of their prayer—"
    },
    {
      "no_ayah": 6,
      "arabic": "الَّذِينَ هُمْ يُرَاءُونَ",
      "transliteration": "Alladzina hum yura'un",
      "indonesian": "orang-orang yang berbuat ria,",
      "english": "Those who make show [of their deeds]"
    },
    {
      "no_ayah": 7,
      "arabic": "وَيَمْنَعُونَ الْمَاعُونَ",
      "transliteration": "Wayamna'una al-ma'un",
      "indonesian": "dan enggan memberikan bantuan.",
      "english": "And withhold [simple] assistance."
    }
  ]
}
